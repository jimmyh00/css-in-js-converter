{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/naming-convention": 1,
        "@typescript-eslint/semi": 0,
        "curly": 1,
        "eqeqeq": 1,
        "no-throw-literal": 1,
        "semi": 0,
        "quotes": [2, "single"]
    },
    "ignorePatterns": [
        "out",
        "dist",
        "**/*.d.ts"
    ]
}
